%Cd%xd(w)%xd(x)%xd(y)%xd(z)

# Radio icon
%xl(r,Radio Icon.bmp,6,6)
# Viewport for Radio icon display
%Vl(na,10,58,216,213,-)
# Show radio icon
%xd(r)

# Viewport for frequency display
%V(240,81,235,31,1)%Vf(000000)
# Show current frequency in MHz
%al%tf Mhz

# Viewport for station name
%V(240,115,235,28,3)%Vf(888888)
# Show station name or tuning status
%s%al%?Tn<%Tn|%?ty<%ty|%?tt<Tuned|tune>>>

# Viewport for signal info
%V(240,144,235,28,3)%Vf(888888)
# Show RDS text or signal strength label
%s%al%?tz<%tz|%Sx(Signal strength:)>

# Signal strength icons (reusing ratings images)
%xl(R,Ratings.bmp,0,0,10)
# Viewport for signal strength indicator
%V(240,174,99,19,-)
# Show signal strength bars
%?tr<|%xd(Ra)|%xd(Rb)|%xd(Rc)|%xd(Rd)|%xd(Re)|%xd(Rf)|%xd(Rg)|%xd(Rh)|%xd(Ri)|%xd(Rj)>

# Viewport for scan/tuning info
%V(240,201,235,21,2)%Vf(888888)
# Show scan progress or preset info
%s%al%?tm<%Sx(Scan)|%Ti %Sx(of) %Tc>

# Conditional: Volume bar or Progress bar
%?mv(2.0)<%Vd(volume)|%Vd(pb)>

# Viewport for tuning progress bar
%Vl(pb,87,309,306,34,-)
%pb(0,0,306,34,PB.bmp)

# Viewport for volume level bar
%Vl(volume,87,309,306,34,-)
%pv(0,0,204,23,PB.bmp)

