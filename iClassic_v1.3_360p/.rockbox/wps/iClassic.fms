%T(0,0,324,27,&cancel)
# Touch region: Previous preset
%T(0,300,87,37,prev)
# Touch region: Rewind tuning
%T(0,300,87,37,&rwd)
# Touch region: Presets menu
%T(160,198,97,22,presets)
# Touch region: Next preset
%T(262,300,87,37,next)
# Touch region: Fast-forward tuning
%T(262,300,87,37,&ffwd)
