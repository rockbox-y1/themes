%xl(V,Volume Right.bmp,0,0)
# Viewport for volume bar right cap
%Vl(volume,409,304,31,31,-)
%xd(V)

# Volume bar left cap
%xl(v,Volume Left.bmp,0,0)
# Viewport for volume bar left cap
%Vl(volume,51,306,19,28,-)
%xd(v)

# Viewport for volume numeric display
%Vl(volume,87,340,306,19,2)%Vf(000000)
%ac%?St(volume display)<|%pv dB>

# Viewport for start frequency/left info
%Vl(pb,0,310,67,21,2)%Vf(000000)
